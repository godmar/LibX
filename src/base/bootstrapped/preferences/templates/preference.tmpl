{DefaultLocale=en_US}

<!-- preference.tmpl -->
<if test="data._name != 'enabled'">

    <if test="data._type == 'boolean'">
        <ul><li>
            <input type="checkbox" name="{+data._id+}" class="preference-checkbox" <if test="data._value">checked="checked"</if> />
            <label>{L:pref data._idstr L}</label>
        </li></ul>
    </if>
    <if test="data._type == 'choice'">
        <ul><li>
            <label>{L:pref data._idstr L}</label>
            <div>
                <for each="item" in="data._items">
                    <input type="radio" name="{+ data._id +}" value="{+ item._value +}" <if test="item._selected">checked="checked"</if> />
                    <!-- XXX: pull these from old bundles file -->
                    <label>{L:pref item._idstr L}</label>
                    <br/>
                </for>
            </div>
        </li></ul>
    </if>
    <if test="data._type == 'string'">
        <ul><li>
            <label>{L:pref data._idstr L}</label>
            <div><input type="text" class="preference-text" name="{+ data._id +}" value="{+ data._value +}" style="width: 50em;" /></div>
        </li></ul>
    </if>
</if>