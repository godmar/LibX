<!-- DTD for LibX Edition config files -->
<!-- $Id: libxconfig.dtd,v 1.4 2006/05/19 16:51:10 godmar Exp $ -->

<!ELEMENT edition (name,links,catalogs,xisbn,openurl,proxy,options)>
<!ATTLIST edition id CDATA #REQUIRED>
<!ELEMENT name EMPTY>
<!ATTLIST name 
        short           CDATA #REQUIRED
        institution     CDATA #REQUIRED
        adaptedby       CDATA #IMPLIED
>
<!ELEMENT links (url*) >
<!ELEMENT url EMPTY>
<!ATTLIST url 
        href            CDATA #REQUIRED
        label           CDATA #REQUIRED
>

<!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - -->

<!ELEMENT catalogs (millenium|aleph|sirsi|voyager|horizon|sersol|sfx|bookmarklet)* >
<!ELEMENT bookmarklet EMPTY>
<!ATTLIST bookmarklet 
        name            CDATA #REQUIRED
        url             CDATA #REQUIRED
        options         CDATA #REQUIRED
>
<!ELEMENT millenium EMPTY>
<!ATTLIST millenium 
        name            CDATA #REQUIRED
        url             CDATA #REQUIRED
        sid             CDATA #IMPLIED
        urlregexp       CDATA #IMPLIED
        options         CDATA #IMPLIED
        searchscope     CDATA #REQUIRED
        sort            CDATA #IMPLIED
        keywordcode     CDATA #IMPLIED
        advancedcode    CDATA #IMPLIED
        searchform      CDATA #IMPLIED
>
<!ELEMENT aleph EMPTY>
<!ATTLIST aleph 
        name            CDATA #REQUIRED
        url             CDATA #REQUIRED
        sid             CDATA #REQUIRED
        urlregexp       CDATA #IMPLIED
        options         CDATA #IMPLIED
        localbase       CDATA #REQUIRED
        title           CDATA #REQUIRED
        author          CDATA #REQUIRED
        isbn            CDATA #REQUIRED
        issn            CDATA #REQUIRED
        callno          CDATA #REQUIRED
        keyword         CDATA #REQUIRED
        findfunc        CDATA #REQUIRED
        advfindfunc     CDATA #REQUIRED
        scanfunc        CDATA #REQUIRED
        scanindexlist   CDATA #IMPLIED
        subject         CDATA #IMPLIED
>
<!ELEMENT sfx EMPTY>
<!ATTLIST sfx 
        name            CDATA #REQUIRED
        url             CDATA #REQUIRED
        sid             CDATA #IMPLIED
        options         CDATA #IMPLIED
>
<!ELEMENT sersol EMPTY>
<!ATTLIST sersol 
        name            CDATA #REQUIRED
        url             CDATA #REQUIRED
        sid             CDATA #IMPLIED
        options         CDATA #IMPLIED
>
<!ELEMENT sirsi EMPTY>
<!ATTLIST sirsi 
        name            CDATA #REQUIRED
        url             CDATA #REQUIRED
        sid             CDATA #IMPLIED
        urlregexp       CDATA #IMPLIED
        options         CDATA #IMPLIED
>
<!ELEMENT voyager EMPTY>
<!ATTLIST voyager 
        name            CDATA #REQUIRED
        url             CDATA #REQUIRED
        sid             CDATA #IMPLIED
        urlregexp       CDATA #IMPLIED
        options         CDATA #IMPLIED
        advancedsearchforissn CDATA #IMPLIED
>
<!ELEMENT horizon EMPTY>
<!ATTLIST horizon 
        name            CDATA #REQUIRED
        url             CDATA #REQUIRED
        sid             CDATA #IMPLIED
        urlregexp       CDATA #IMPLIED
        options         CDATA #IMPLIED
        issn            CDATA #IMPLIED
        isbn            CDATA #IMPLIED
>

<!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - -->

<!ELEMENT xisbn EMPTY>
<!ATTLIST xisbn 
        cues (true|false) 'false'
        opacid          CDATA #IMPLIED
        oai             CDATA #IMPLIED
>

<!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
<!ELEMENT openurl (resolver)* >

<!ELEMENT resolver EMPTY>
<!ATTLIST resolver
        type           (sersol|sfx|webbridge|generic) #REQUIRED
        url            CDATA #REQUIRED
        name           CDATA #REQUIRED
        sid            CDATA #REQUIRED
        version        CDATA #IMPLIED   
        dontshowintoolbar (true|false) 'false'
        autolinkissn   (true|false) 'false'
        searchlabel    CDATA #IMPLIED
        options        CDATA #IMPLIED   
        image          CDATA #IMPLIED   
>

<!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
<!ELEMENT proxy (ezproxy|wam)* >
<!ELEMENT ezproxy EMPTY>
<!ATTLIST ezproxy
        url            CDATA #REQUIRED
        name           CDATA #REQUIRED
>
<!ELEMENT wam EMPTY>
<!ATTLIST wam
        url            CDATA #REQUIRED
        name           CDATA #REQUIRED
>

<!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - -->

<!ELEMENT options (option)*>
<!ELEMENT option EMPTY>
<!ATTLIST option
        key            
            (sersolisbnfix 
            |icon|logo
            |rewritescholar
            |supportcoins
            |scholarmiss.url
            |send.origdata.withopenurl
            |disablescholar
            |suppress.scholar.display
            |autolink
            )
        #REQUIRED
        value          CDATA #REQUIRED
>
